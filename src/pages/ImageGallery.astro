---

<IndexLayout title="ImageGallery">
  <div slot="maindiv" class="image-gallery">
    <h1>图片画廊</h1>
    <div class="image-grid">
      {images.map((image) => (
        <div class="image-item" key={image.id}>
          <img src={image.src} alt={image.alt} loading="lazy" />
          <div class="image-description">
            <h3>{image.title}</h3>
            <p>{image.description}</p>
          </div>
        </div>
      ))}
    </div>

    <div id="modal" class="modal">
      <span class="close">&times;</span>
      <img class="modal-content" id="modal-image" />
      <div id="caption"></div>
    </div>
  </div>
</IndexLayout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap');

  .image-gallery {
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
    font-family: 'Roboto', sans-serif;
  }
  h1 {
    text-align: center;
    margin-bottom: 30px;
    font-weight: 700;
    color: #333;
  }
  .image-grid {
    column-count: 4;
    column-gap: 20px;
  }
  @media (max-width: 1200px) {
    .image-grid {
      column-count: 3;
    }
  }
  @media (max-width: 800px) {
    .image-grid {
      column-count: 2;
    }
  }
  @media (max-width: 500px) {
    .image-grid {
      column-count: 1;
    }
  }
  .image-item {
    break-inside: avoid;
    margin-bottom: 20px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    position: relative;
  }
  .image-item:hover {
    transform: scale(1.05);
  }
  .image-item img {
    width: 100%;
    display: block;
  }
  .image-description {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 10px;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }
  .image-item:hover .image-description {
    transform: translateY(0);
  }
  .image-description h3 {
    margin: 0 0 5px;
    font-size: 16px;
    font-weight: 700;
  }
  .image-description p {
    margin: 0;
    font-size: 12px;
    font-weight: 300;
    line-height: 1.4;
  }
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.9);
  }
  .modal-content {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
    max-height: 80%;
    object-fit: contain;
  }
  .close {
    position: absolute;
    top: 15px;
    right: 35px;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
  }
  #caption {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
    text-align: center;
    color: #ccc;
    padding: 10px 0;
    height: 150px;
  }
</style>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-image');
  const captionText = document.getElementById('caption');
  const closeBtn = document.getElementsByClassName('close')[0];
  const images = document.querySelectorAll('.image-item img');

  images.forEach(img => {
    img.onclick = function() {
      modal.style.display = "block";
      modalImg.src = this.src;
      captionText.innerHTML = this.alt;
    }
  });

  closeBtn.onclick = function() {
    modal.style.display = "none";
  }

  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
</script>