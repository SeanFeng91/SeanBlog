---
import IndexLayout from '../layouts/IndexLayout.astro';
import { Image } from 'astro:assets';
import Timeline from '../components/react/Timeline.jsx';
import SkillsSection from '../components/react/SkillsSection.jsx';
import ProjectGallery from '../components/react/ProjectGallery.jsx';
---
<style>
  body {
    font-family: 'Poppins', sans-serif;
  }
  .transition {
    transition: all 0.3s ease;
  }
</style>
<IndexLayout title="关于我 | About Me">
  <div slot="maindiv" class="max-w-4xl mx-auto px-4 py-12 font-sans">
    <header class="text-center mb-16">
      <img src="https://via.placeholder.com/150" alt="张三" class="w-32 h-32 rounded-full mx-auto mb-6" />
      <h1 class="text-3xl font-bold mb-2">张三 | Sean Zhang</h1>
      <p class="text-xl text-gray-600">全栈开发工程师 | Full Stack Developer</p>
    </header>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-4">关于我 | About Me</h2>
      <p class="text-lg text-gray-700 leading-relaxed mb-4">
        我是一名充满激情的全栈开发工程师，拥有8年的Web开发经验。我专注于创建用户友好的界面和高效的后端系统，为客户提供全面的数字解决方案。
      </p>
      <p class="text-lg text-gray-700 leading-relaxed">
        I am a passionate full-stack developer with 8 years of experience in web development. I specialize in creating user-friendly interfaces and efficient backend systems, providing comprehensive digital solutions for clients.
      </p>
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">项目展示 | Projects</h2>
      <ProjectGallery client:load />
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">专业技能 | Skills</h2>
      <SkillsSection client:load />
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">工作经历 | Work Experience</h2>
      <Timeline client:load />
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">教育背景 | Education</h2>
      <div class="space-y-6">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-2">计算机科学硕士 | Master's in Computer Science</h3>
          <p class="text-gray-600">某知名大学 | Prestigious University | 2015 - 2017</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-2">计算机科学学士 | Bachelor's in Computer Science</h3>
          <p class="text-gray-600">某著名大学 | Famous University | 2011 - 2015</p>
        </div>
      </div>
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6">联系我 | Contact Me</h2>
      <div class="flex justify-center space-x-6">
        <a href="mailto:zhangsan@example.com" class="text-blue-600 hover:text-blue-800 transition duration-300">
          <i class="fas fa-envelope text-2xl"></i>
        </a>
        <a href="https://github.com/zhangsan" class="text-gray-800 hover:text-gray-600 transition duration-300">
          <i class="fab fa-github text-2xl"></i>
        </a>
        <a href="https://linkedin.com/in/zhangsan" class="text-blue-700 hover:text-blue-900 transition duration-300">
          <i class="fab fa-linkedin text-2xl"></i>
        </a>
      </div>
    </section>

    <section>
      <div class="bg-gray-100 p-8 rounded-lg">
        <h2 class="text-2xl font-bold mb-4 text-center">订阅我的更新 | Subscribe to My Updates</h2>
        <form class="flex flex-col sm:flex-row justify-center items-center">
          <input type="email" placeholder="输入您的邮箱 | Enter your email" class="w-full sm:w-auto mb-4 sm:mb-0 sm:mr-4 p-3 rounded-md border border-gray-300" />
          <button type="submit" class="w-full sm:w-auto bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 transition duration-300">订阅 | Subscribe</button>
        </form>
      </div>
    </section>
  </div>
</IndexLayout>